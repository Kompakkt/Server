{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "lib": ["es2018", "es2019", "dom"]
  },
  "include": ["src/**/*.ts"]
}
